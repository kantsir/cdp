<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="MBANK_PERSISTENCE_UNIT"
		transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- Class mapping -->
		
		<class>com.epam.cdp.mbank.model.Account</class>
		<class>com.epam.cdp.mbank.model.Activity</class>
		<class>com.epam.cdp.mbank.model.Client</class>
		<class>com.epam.cdp.mbank.model.Deposit</class>
		<class>com.epam.cdp.mbank.model.Property</class>

		<properties>
			<!-- Database connection settings -->
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost/mbank" />
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="root" />

			<!-- SQL dialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />

			<!-- Validate the database schema on startup -->
			<property name="hibernate.hbm2ddl.auto" value="create"/>
		</properties>

	</persistence-unit>
</persistence>