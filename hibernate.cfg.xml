<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/mbank</property>
		<property name="hibernate.dialect">	org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="current_session_context_class">thread</property>
		<property name="hibernate.hbm2ddl.auto">update</property>

		<mapping class="com.epam.cdp.mbank.model.Account" />
		<mapping class="com.epam.cdp.mbank.model.Activity" />
		<mapping class="com.epam.cdp.mbank.model.Client" />
		<mapping class="com.epam.cdp.mbank.model.Deposit" />
		<mapping class="com.epam.cdp.mbank.model.Property" />
				
	</session-factory>
</hibernate-configuration>